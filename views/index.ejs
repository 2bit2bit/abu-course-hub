        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <h1>Welcome to ABU Course Hub</h1>
                <p>Discover and access course materials and collaborate with peers at Ahmadu Bello University.</p>
        
                <% if (!isLoggedIn) { %>
                    <a href="/signup-student" class="cta-button">Sign Up</a>
                <% } %>
        
               
                    <% if (role === 'student') { %>
                        <a href="/all-course-student" class="cta-button">Explore Courses</a>
