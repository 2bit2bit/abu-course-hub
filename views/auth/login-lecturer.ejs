<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/auth.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>

        <% if (errorMessage) { %>
            <div class="errorMessage"><%= errorMessage %></div>
        <% } %>
        <h4>Staff Login</h4>
        <form class="auth-form" action="/login-lecturer" method="POST">
            <div>
                <label for="staffID">Staff ID</label>
                <input type="text" name="staffID" id="staffID" placeholder="Staff ID" minlength="1" maxlength="50" value="<%= oldInput.staffID %>" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Password" value="<%= oldInput.password %>">           
            </div>

            <button class="btn" type="submit">Login</button>

        </form>
        <div class="signup-link">
            <p>Not a lecturer? <a href="/login-student">Login as a Student</a></p>
        </div>
    </main>

    <%- include('../includes/end.ejs') %>
</body>
</html>
