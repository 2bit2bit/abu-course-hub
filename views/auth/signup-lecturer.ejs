<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/auth.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (errorMessage && errorMessage !== []) { %>
            <div class="errorMessage"><%= errorMessage %></div>
        <% } %> 

        <!-- Lecturer Signup Form -->
        <h4>Staff Sign Up</h4>

        <div id="Lecturer" class="tab-content" style="display: block;">
            <form class="auth-form" action="/signup-lecturer" method="POST" novalidate>
                <div>
                    <label for="staffID">Staff ID</label>
                    <input type="text" name="staffID" id="staffID" placeholder="Staff ID" minlength="1" maxlength="50" value="<%= oldInput.staffID %>" required>
                </div>
                <div>
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" id="firstName" placeholder="First Name" minlength="1" maxlength="50" value="<%= oldInput.firstName %>" required>
                </div>
                <div>
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName" placeholder="Last Name" minlength="1" maxlength="50" value="<%= oldInput.lastName %>" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password" minlength="8" maxlength="50" value="<%= oldInput.password %>" required>
                </div>
                <div>
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" minlength="8" maxlength="50"  value="<%= oldInput.confirmPassword %>" required>
                </div>
                <button class="btn" type="submit">Sign Up</button>
            </form>

            <div class="signup-link">
                <p>Not a Lecturer? <a href="/signup-student">Sign up as a student</a></p>
            </div>
        </div>
    </main>

    <%- include('../includes/end.ejs') %>
</body>
</html>
