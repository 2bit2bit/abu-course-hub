<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/auth.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>

        <% if (errorMessage) { %>
            <div class="errorMessage"><%= errorMessage %></div>
        <% } %>
        <h4>Student Login</h4>
        <form class="auth-form" action="/login-student" method="POST">
            <div>
                <label for="regNumber">Registration Number</label>
                <input type="text" name="regNumber" id="regNumber" placeholder="Registration Number" minlength="1" maxlength="50" value="<%= oldInput.regNumber %>" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="password" value="<%= oldInput.password %>">           
            </div>

            <button class="btn" type="submit">Login</button>

        </form>
        <div class="signup-link">
            <p>Not a student? <a href="/login-lecturer">Login as a Staff</a></p>
        </div>
    </main>

<%- include('../includes/end.ejs') %>