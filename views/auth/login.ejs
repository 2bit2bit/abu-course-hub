<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/auth.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>

        <% if (errorMessage) { %>
            <div class="errorMessage"><%= errorMessage %></div>
        <% } %>
        <form class="auth-form" action="/login" method="POST">
            <div>
                <label for="phoneNumber">WhatsApp Number</label>
                <input type="tel" name="phoneNumber" id="phoneNumber" placeholder="Phone Number" value="<%= oldInput.phoneNumber %>">
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="password" value="<%= oldInput.password %>">           
            </div>

            <button class="btn" type="submit">Login</button>

            <!-- <a href="/reset-password">Forgot password?</a> -->
        </form>
    </main>

<%- include('../includes/end.ejs') %>