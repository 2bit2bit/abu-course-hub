<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/articles.css">
<link rel="stylesheet" href="/css/home.css">

</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (!isLoggedIn) { %>
            <!-- Homepage content for non-logged-in users -->
            <section class="hero">
              <div class="logo-container">
                <br>
                <br>
                <img src="/img/farm2u-logo-big.png" alt="Farm2U Zaria Logo" class="logo">
                <br>
                <br
            </div>
                <p>Your gateway to sustainable agriculture and food security in Zaria.</p>
                <br>
                <br>
                <br>
                <ul class="sign-in__login2">
                  <li>
                    <a class="<%= path === '/login' ? 'active' : ' ' %>" href="/login"
                      >Login</a
                    >
                  </li>
                  <li>
                    <a
                      class="<%= path === '/signup' ? 'sign-up active' : 'sign-up' %>"
                      href="/signup"
                      >Sign Up</a
                    >
                  </li>
                </ul>
            </section>

            <section class="features">
                <div class="feature">
                    <i class="fas fa-seedling"></i>
                    <h2>Optimize Crop Production</h2>
                    <p>Access agricultural data and resources to boost farm productivity.</p>
                </div>
                <div class="feature">
                    <i class="fas fa-store"></i>
                    <h2>Direct Marketplace</h2>
                    <p>Connect directly with consumers to sell your farm produce efficiently.</p>
                </div>
                <div class="feature">
                    <i class="fas fa-apple-alt"></i>
                    <h2>Improve Nutrition</h2>
                    <p>Learn about nutrition and dietary practices to enhance your well-being.</p>
                </div>
            </section>
        <% } else { %>
            <!-- Content for logged-in users -->
            <form class="search" action="" method="get">
                <input type="text" name="title" id="search" placeholder="Search for farm product" value="<%= prevSearch %>">
                <button type="submit">Search</button>
            </form>

            <% for(var i = 0; i < articles.length; i++) { %>
                <a class='article' href="article/<%= articles[i]._id %>">
                    <img src="<%= articles[i].image %>" alt="cover-photo">
                    <div class="detail">
                        <h2><%= articles[i].title %></h2>
                        <p><%= articles[i].description %></p>
                        <div class="details">
                            <span><i class='fas fa-eye'></i> <%= articles[i].read_count %> </span>
                            <span><i class='fas fa-user-alt'></i> <%= articles[i].author.username %></span>
                        </div>
                    </div>
                </a>
            <% } %>

            <section class="pagination">
                <% if (hasPrevPage) { %>
                    <a href="/?page=<%= prevPage %>">&lt;&lt; prev</a>
                <% } %>
                <% if (hasNextPage) { %>
                    <a href="/?page=<%= nextPage %>">next &gt;&gt;</a>
                <% } %>
            </section>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>
