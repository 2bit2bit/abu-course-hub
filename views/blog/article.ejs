<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/article.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <img class = 'cover-photo' src="<%= article.image %>" alt="Cover Photo">
        <h1><%= article.title %></h1> 
        <p class="details">
            <span><i class='fas fa-eye'></i>  <%= article.read_count %>  </span>
            <span><i class='fas fa-user-alt'></i>  <%= article.author.username %></span>
        </p>   
        <a href="https://api.whatsapp.com/send?phone=<%= article.author.phoneNumber %>&text=%0AHello,%20I'm%20interested%20in%20buying%20your%20<%= encodeURIComponent(article.title) %>%20farm2u_Zaria_" class="buy_button">
            <i class="fab fa-whatsapp"></i> CONTACT SELLER
        </a>        
             
        <!-- <a class="flag_button"><i class="fas fa-flag"></i></i> Report product</a>                  -->
              
        <p class="description"><%= article.description %></p>
        <p class="body"><%= article.body %></p>
    </main>

<%- include('../includes/end.ejs') %>

