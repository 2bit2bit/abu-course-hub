<body>
  <div class="mobile-nav">
    <button class="mobile-nav_close">X</button>

    <nav>
      <% if (!isLoggedIn) { %>
      <ul>
        <li>
          <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
        </li>
        <li>
          <a
            class="<%= path === '/knowledgehub.html' ? 'active' : '' %>"
            href="/knowledgehub.html"
            >Knowledge Hub</a
          >
        </li>
